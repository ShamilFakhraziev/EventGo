@model AccountDeposit;
@{
    ViewData["Title"] = "Пополнение счета";
}
<h2>Пополнение счета</h2>
<form method="post" asp-action="MakeDeposit" asp-controller="Account">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="CreditCard"></label> <br />
        <input type="number" asp-for="CreditCard" />
        <span asp-validation-for="CreditCard"></span>
    </div>
    <div>
        <label asp-for="DepositAmount"></label> <br />
        <input type="number" asp-for="DepositAmount" />
        <span asp-validation-for = "DepositAmount"></span>
    </div>
    
    <div class="mt-1">
        <input type="submit" class="btn btn-success" value="Пополнить" />
    </div>
</form>